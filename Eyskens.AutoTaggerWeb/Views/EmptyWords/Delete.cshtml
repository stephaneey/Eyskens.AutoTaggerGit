@model Eyskens.AutoTaggerWeb.Models.EmptyWord

<h3 style="margin-top:90px;">Are you sure you want to delete this Empty Word?</h3>
<div>
    
    
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.word)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.word)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.lang)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.lang)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.word)
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index",
                new
                {
                    letter = Model.word.Substring(0, 1),
                    SPHostUrl = HttpContext.Current.Request.QueryString["SPHostUrl"],
                    SPAppWebUrl = HttpContext.Current.Request.QueryString["SPAppWebUrl"]
                })
        </div>
    }
</div>
